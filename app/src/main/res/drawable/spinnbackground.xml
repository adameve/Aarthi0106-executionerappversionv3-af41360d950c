<?xml version="1.0" encoding="utf-8"?>
 <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#ffffff" />

            <stroke
                android:width="0dp"
                android:color="#ffa500" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end|right"
            android:src="@drawable/ic_down" />
    </item>
    </layer-list>

